@model WebMVCApplKamPublic.Models.Person

@{
    ViewData["Title"] = "Edit";
}

<div class="col-11 mx-auto pt-0 p-0">
<div class="card">
    <div class="card-header bg-danger text-uppercase text-white text-center mb-2 pt-0" style="height:25px;">
        <h4>Person - Edit</h4>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post" asp-action="Edit">
            <div class="row">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Id" />

                    <div class="form-group col-8">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group col-8">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <div class="form-group col-8">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-11 btn-group p-2">
                <div class="col-1"></div>

                <div class="col-5">
                    <input type="submit" value="Save changes" class="btn btn-primary btn-block" style="width:150px" />
                </div>

                <div class="col-5">
                    <a class="btn btn-dark btn-block" asp-action="Index" style="width:150px">
                        Back to list
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
